display: ( MapTestDisplay
    
    name: "Map Test"
  
    left:        -10
    right:        10
    bottom:      -10
    top:          10
    near:        -2.0
    far:          2.0
    vpX:          0
    vpY:          0 
    vpWidth:  800
    vpHeight: 800


    clearDepth: 20.0
    clearColor: ( rgb 0.321 0.321 0.321 )
    
    normalFont: normal

    fonts: {
        // normal font for most display stuff
        normal:
        ( FTGLHaloFont
            fontPosition: [ -10 10 ]
            path: MIXR_DATA_FONT_PATH
            file: "arialn.ttf"
            // facesize is default to 1 inch, so you can maninpulate the norm with font width and height
            linewidth: 3
            fontWidth: 0.35
            fontHeight: 0.35
        )        
    }

    // here our the buttons, and other stuff that will "overlay" the map page
    components: {
        // range up
        ( Button
            transform: ( Translation 9 9.25 )
            selectName: 1
            eventId: 1000
            components: {
                ( Polygon
                    color: black
                    vertices: {
                        [ -0.45 -0.45 ]
                        [  0.45 -0.45 ]
                        [  0 0.45 ]
                    }
                )
                ( Polygon
                    color: white
                    vertices: {
                        [ -0.5 -0.5 ]
                        [ -0.5  0.5 ]
                        [  0.5  0.5 ]
                        [  0.5 -0.5 ]
                    }
                )
            }
        )
        // range down
        ( Button
            transform: ( Translation 9 7.5 )
            selectName: 2
            eventId: 1001
            components: {
                ( Polygon
                    color: black
                    vertices: {
                        [ -0.45 0.45 ]
                        [  0.45 0.45 ]
                        [  0 -0.45 ]
                    }
                )
                ( Polygon
                    color: white
                    vertices: {
                        [ -0.5 -0.5 ]
                        [ -0.5  0.5 ]
                        [  0.5  0.5 ]
                        [  0.5 -0.5 ]
                    }
                )
            }
        )
        
        // range value
        range:
        ( NumericReadout
            color: white
            format: "###"
            transform: { ( Translation 8.5 8.2 ) ( Scale 2 ) }
            value: 999
        )
    }

    // name of the current page we want    
    page: mappage

    // list of pages we could display, although for this test we just have one, so we
    // will just put it here.
    pages: {
        mappage:
        ( MapTestMapPage
            range: 60
            outerRadius: 10  // same size as display ortho, so it fits nicely
            components: {
                // symbol loader
                sloader:
                ( SymbolLoader
                    templates: {
                         // good guy
                         ( Graphic
                            components: {
                                hdg:
                                ( Rotators
                                    components: {
                                         symbol:
                                        ( Graphic
                                            components: {
                                                ( Polygon
                                                    color: blue
                                                    vertices: {
                                                        [ -0.15 -0.25 ]
                                                        [  0.15 -0.25 ]
                                                        [  0  0.25 ]
                                                    }
                                                )
                                                // outline
                                                ( LineLoop
                                                    color: black
                                                    linewidth: 2
                                                    vertices: {
                                                        [ -0.15 -0.25 ]
                                                        [  0.15 -0.25 ]
                                                        [  0  0.25 ]
                                                    }
                                                )
                                            }
                                        )
                                    }
                                )
                                name:
                                ( AsciiText
                                    color: white
                                    transform: ( Translation -0.5 -0.5 )
                                    text: "XXXXXXX"
                                )                                
                            }
                        )
                        // bad guy
                         ( Graphic
                            components: {
                                hdg:
                                ( Rotators
                                    components: {
                                         symbol:
                                        ( Graphic
                                            components: {
                                                ( Polygon
                                                    color: red
                                                    vertices: {
                                                        [ -0.15 -0.25 ]
                                                        [  0.15 -0.25 ]
                                                        [  0  0.25 ]
                                                    }
                                                )
                                                // outline
                                                ( LineLoop
                                                    color: black
                                                    linewidth: 2
                                                    vertices: {
                                                        [ -0.15 -0.25 ]
                                                        [  0.15 -0.25 ]
                                                        [  0  0.25 ]
                                                    }
                                                )
                                            }
                                        )
                                    }
                                )
                                name:
                                ( AsciiText
                                    color: white
                                    transform: ( Translation -0.5 -0.5 )
                                    text: "XXXXXXX"
                                )                                
                            }
                        )
                    }
                )

                // here is the outer circle, to show range
                ( OcclusionCircle
                    color: white
                    radius: 9.9
                    outerRadius: 10
                    slices: 1000
                )
                
                // here are our lat/lon lines text readouts
                // LAT READOUTS
                line1:
                ( Translator components: { text1: ( LatitudeReadout color: cyan format: "+DD" ) } )
                line2:
                ( Translator components: { text2: ( LatitudeReadout color: cyan format: "+DD" ) } )
                line3:
                ( Translator components: { text3: ( LatitudeReadout color: cyan format: "+DD" ) } )
                line4:
